{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "index.ts",
    "./src/material-import.module.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "genDir": "compiled"
  }
}
